templ Themes() {
	@layouts.DocsLayout(
		"Themes",
		"Customize the theme of the UI components.",
		[]modules.TableOfContentsItem{},
	) {
		@modules.PageWrapper(modules.PageWrapperProps{
			Name:        "Themes",
			HideSource:  true,
			Description: templ.Raw("Customize the theme of the UI components."),
			Breadcrumbs: modules.Breadcrumbs{
				Items: []modules.BreadcrumbItem{
					{
						Text: "Docs",
						Path: "/docs",
					},
					{
						Text: "Themes",
						Path: "/docs/themes",
					},
				},
			},
		}) {
			<div
				x-data="themeCustomizer"
			>
				<div class="flex flex-col md:flex-row gap-8">
					<div class="w-full md:w-1/2">
						<div class="flex items-start justify-between mb-4">
							<div>
								<div class="font-semibold">Customize</div>
								<div class="text-xs text-muted-foreground">Pick a style and color for your components.</div>
							</div>
							@button.Button(button.Props{
								Size:    button.SizeIcon,
								Variant: button.VariantOutline,
								Attributes: templ.Attributes{
									"@click": "resetTheme",
								},
							}) {
								@icon.RotateCcw(icon.Props{Size: 14})
							}
						</div>
						@ThemeCustomizer(ThemeCustomizerProps{
							CurrentTheme:  "orange",
							CurrentRadius: "0.5",
						})
					</div>
					<div class="w-full md:w-1/2">
						<div class="mb-4">
							<div class="font-semibold">Preview</div>
							<div class="text-xs text-muted-foreground">This is how your theme will look like.</div>
						</div>
						@ThemePreview()
					</div>
				</div>
			</div>
			@ThemesHandle()
		}
	}
}

templ ThemePreview() {
	<div id="theme-preview" class="theme-preview p-6 border rounded-lg">
		@card.Card() {
			@card.Header() {
				@card.Title() {
					User Registration 
				}
				@card.Description() {
					Please fill out the form below to create your account. 
				}
			}
			@card.Content() {
				<form class="space-y-4">
					@form.Item() {
						@form.Label(form.LabelProps{
							For: "username",
						}) {
							Username
						}
						@input.Input(input.Props{
							ID:          "username",
							Type:        input.TypeText,
							Placeholder: "Enter your username",
						})
					}
					@form.Item() {
						@form.Label(form.LabelProps{
							For: "email",
						}) {
							Email
						}
						@input.Input(input.Props{
							ID:          "email",
							Type:        input.TypeEmail,
							Placeholder: "Enter your email",
						})
					}
					@form.Item() {
						@form.Label(form.LabelProps{
							For: "password",
						}) {
							Password
						}
						@input.Input(input.Props{
							ID:          "password",
							Type:        input.TypePassword,
							Placeholder: "Enter your password",
						})
					}
					@form.Item() {
						@form.Label(form.LabelProps{
							For: "birthdate",
						}) {
							Birth Date
						}
						@datepicker.DatePicker(datepicker.Props{
							ID:          "birthdate",
							Placeholder: "Select your birth date",
						})
					}
					@form.Item() {
						<p class="text-sm text-muted-foreground">Contact Method</p>
						@form.ItemFlex() {
							@radio.Radio(radio.Props{
								ID:   "contact-email",
								Name: "contact-method",
							})
							@form.Label(form.LabelProps{
								For: "contact-email",
							}) {
								Email
							}
						}
						@form.ItemFlex() {
							@radio.Radio(radio.Props{
								ID:   "contact-phone",
								Name: "contact-method",
							})
							@form.Label(form.LabelProps{
								For: "contact-phone",
							}) {
								Phone
							}
						}
						@form.ItemFlex() {
							@radio.Radio(radio.Props{
								ID:       "contact-mail",
								Name:     "contact-method",
								Disabled: true,
							})
							@form.Label(form.LabelProps{
								For: "contact-mail",
							}) {
								Physical Mail
							}
						}
					}
					@form.Item() {
						<p class="text-sm text-muted-foreground">Preferences</p>
						@form.ItemFlex() {
							@toggle.Toggle(toggle.Props{
								ID:   "marketing",
								Name: "marketing",
							})
							@form.Label(form.LabelProps{
								For: "marketing",
							}) {
								Receive marketing emails
							}
						}
						@form.ItemFlex() {
							@toggle.Toggle(toggle.Props{
								ID:         "notifications",
								Name:       "notifications",
								Attributes: templ.Attributes{"checked": "true"},
							})
							@form.Label(form.LabelProps{
								For: "notifications",
							}) {
								Enable notifications
							}
						}
						@form.ItemFlex() {
							@toggle.Toggle(toggle.Props{
								ID:         "beta",
								Name:       "beta",
								Attributes: templ.Attributes{"disabled": "true"},
							})
							@form.Label(form.LabelProps{
								For: "beta",
							}) {
								Join beta program
							}
						}
					}
					@form.Item() {
						<p class="text-sm text-muted-foreground">Terms and Conditions</p>
						@form.ItemFlex() {
							@checkbox.Checkbox(checkbox.Props{
								ID: "terms",
							})
							@form.Label(form.LabelProps{
								For: "terms",
							}) {
								I accept the terms and conditions
							}
						}
						@form.ItemFlex() {
							@checkbox.Checkbox(checkbox.Props{
								ID: "newsletter",
							})
							@form.Label(form.LabelProps{
								For: "newsletter",
							}) {
								Subscribe to newsletter
							}
						}
					}
				</form>
			}
			@card.Footer() {
				<div class="flex justify-between w-full">
					@button.Button(button.Props{
						Variant: button.VariantSecondary,
					}) {
						Cancel
					}
					@button.Button() {
						Register
					}
				</div>
			}
		}
	</div>
}

type ThemeCustomizerProps struct {
	CurrentTheme  string
	CurrentRadius string
}

templ ThemeCustomizer(props ThemeCustomizerProps) {
	<div
		class="theme-customizer w-full flex flex-col gap-2"
	>
		<div class="flex flex-1 flex-col space-y-4 md:space-y-6">
			@ThemeSelector()
			@RadiusSelector()
			@ModeSelector()
		</div>
		@modal.Trigger(modal.TriggerProps{
			ModalID: "css-modal",
		}) {
			@button.Button(button.Props{
				FullWidth: true,
				Attributes: templ.Attributes{
					"@click": "getGeneratedCSS",
				},
			}) {
				Generate and Copy CSS
			}
		}
		@modal.Modal(modal.Props{
			ID:    "css-modal",
			Class: "max-w-xl",
		}) {
			@modal.Header() {
				Generated CSS Code
			}
			@modal.Body() {
				<pre x-text="generatedCSS" class="text-primary p-4 rounded overflow-x-auto max-h-96"></pre>
			}
			@modal.Footer() {
				<div class="flex gap-2">
					@button.Button(button.Props{
						Attributes: templ.Attributes{"@click": "copyToClipboard"},
					}) {
						Copy to Clipboard
					}
					@modal.Close(modal.CloseProps{
						ModalID: "css-modal",
					}) {
						@button.Button(button.Props{
							Variant: button.VariantSecondary,
						}) {
							Close
						}
					}
				</div>
			}
		}
	</div>
}

