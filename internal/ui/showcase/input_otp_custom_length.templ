package showcase

import "github.com/templui/templui/internal/components/inputotp"

templ InputOTPCustomLength() {
	@inputotp.InputOTP(inputotp.Props{
		ID: "otp-custom-length",
	}) {
		@inputotp.Group() {
			@inputotp.Slot(inputotp.SlotProps{
				Index: 0,
			})
			@inputotp.Slot(inputotp.SlotProps{
				Index: 1,
			})
			@inputotp.Slot(inputotp.SlotProps{
				Index: 2,
			})
		}
	}
}
